.row.sideBar-body
  .hidden#user_id_left
    =user.id
  .col-sm-3.col-xs-3.sideBar-avatar
    .avatar-icon
      =image_tag user.image.to_s
  .col-sm-9.col-xs-9.sideBar-main
    .row
      .col-sm-8.col-xs-8.sideBar-name
        %span.name-meta
          =user.name
      .col-sm-4.col-xs-4.pull-right.sideBar-time
        %span.time-meta.pull-right
          =user.updated_at
