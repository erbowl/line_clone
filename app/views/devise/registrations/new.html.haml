%h2 Sign up
= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.email_field :email, autofocus: true
  = f.password_field :password, autocomplete: "off",placeholder:"6文字以上で入力してください"
  = f.password_field :password_confirmation, autocomplete: "off"
  = f.text_field :name,placeholder:"このアプリで表示される名前です。"
  = f.text_field :user_id,placeholder:"このアプリで使用されるIDです"  
  = f.submit "Sign up",:class=>"btn btn-info btn-block"
= render "devise/shared/links"
